{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸš€ Start Development Server",
      "type": "npm",
      "script": "dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "ğŸŒ Web Development"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "ğŸ”¥ Start Firebase Emulators",
      "type": "shell",
      "command": "firebase",
      "args": ["emulators:start", "--only", "auth,firestore,functions"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "ğŸ”¥ Firebase"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "firebase",
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting emulators:",
          "endsPattern": "All emulators ready!"
        }
      }
    },
