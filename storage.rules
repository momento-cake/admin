rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role.type == 'admin' &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isActive == true;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function hasBusinessAccess(businessId) {
      return isAuthenticated() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.businessId == businessId &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isActive == true;
    }
    
    // User profile images
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Business related files
    match /businesses/{businessId}/{allPaths=**} {
      allow read: if isAdmin() || hasBusinessAccess(businessId);
      allow write: if isAdmin() || hasBusinessAccess(businessId);
    }
    
    // Order attachments
    match /orders/{orderId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Recipe images
    match /recipes/{recipeId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Product images
    match /products/{productId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Gallery images (reference images for clients)
    // NOTE: Public read access is enabled because:
    // 1. Image URLs contain unique timestamps and random strings (unguessable)
    // 2. Firestore controls which images are discoverable via folder queries
    // 3. This enables public gallery viewing without authentication
    match /images/gallery/{allPaths=**} {
      // Public read access for gallery images (enables public folder viewing)
      allow read: if true;
      // Authenticated users can upload images (validated by file type and size)
      allow create: if isAuthenticated() &&
                      // Validate file type
                      request.resource.contentType.matches('image/.*') &&
                      // Validate file size (max 10MB)
                      request.resource.size < 10 * 1024 * 1024;
      // Authenticated users can delete (Firestore rules will enforce ownership)
      allow delete: if isAuthenticated();
    }

    // Public assets (logos, etc.)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Temporary uploads (with expiration)
    match /temp/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}